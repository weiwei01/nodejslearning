extends layout

block content
  .container
    form.form-horizontal(method = "post")
      fieldset
        legend User Register
        .control-group
          label.control-label(for="username") user name
          .controls
            input.input-xlarge(type="text" id="username" name="username")
            p.help-block your user account for login and display
        .control-group
          label.control-label(for="password") password
          .controls
            input.input-xlarge(type="password" id= "password" name="password")
        .control-group
          label.control-label(for="password-repeat") password repeat
            .controls
              input.input-xlarge(type="password" id= "password-repeat" name="password-repeat")
       .form-actions
         button.btn.btn-primary(type="submit") register
